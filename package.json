{
  "name": "statcal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node -r ./setup-globals.js ./node_modules/.bin/next dev -p 3011",
    "build": "NEXT_LINT=false node -r ./setup-globals.js ./node_modules/.bin/next build",
    "start": "node -r ./setup-globals.js ./node_modules/.bin/next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "db:migrate": "mkdir -p data && sqlite3 data/statcal.db < migrations/001_init.sql",
    "db:seed": "sqlite3 data/statcal.db < seeds/seed-calculators.sql",
    "export:calculators": "tsx ./scripts/export-calculators.ts",
    "build:content-index": "tsx scripts/build-content-index.ts",
    "prebuild": "npm run export:calculators || echo 'skip export (no db or deps)'",
    "check-links": "tsx scripts/check-links.ts",
    "check-links:external": "tsx scripts/check-links-external.ts",
    "check-links:ci": "npm run check-links -- --fail-on-broken --report=link-report.md",
    "lighthouse": "tsx scripts/run-lighthouse.ts",
    "test:a11y": "playwright test tests/performance.spec.ts --grep 'Accessibility'",
    "test:perf": "playwright test tests/performance.spec.ts --grep 'Performance'"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.3",
    "@types/decimal.js": "^0.0.32",
    "@types/mdx": "^2.0.13",
    "decimal.js": "^10.6.0",
    "drizzle-orm": "^0.30.10",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.544.0",
    "next": "^15.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "axe-core": "^4.9.0",
    "better-sqlite3": "^9.6.0",
    "chalk": "^5.6.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "glob": "^11.0.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  }
}
