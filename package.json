{
  "name": "statcal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3011",
    "prebuild": "npm run db:prepare && npm run export:calculators",
    "build": "NEXT_LINT=false next build",
    "postbuild": "echo 'Build completed with database snapshot'",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "db:migrate": "mkdir -p data && sqlite3 data/statcal.db < migrations/001_init.sql",
    "db:prepare": "tsx scripts/db-prepare.ts",
    "db:validate": "tsx scripts/db-prepare.ts --validate-only",
    "db:migrate:slim": "tsx scripts/run-migrations.ts",
    "db:check": "tsx scripts/check-db-ready.ts",
    "db:setup": "npm run db:check && echo 'Database setup complete'",
    "db:seed": "sqlite3 data/statcal.db < seeds/seed-calculators.sql",
    "db:seed:content": "sqlite3 data/statcal.db < seeds/seed-content.sql",
    "export:calculators": "tsx ./scripts/export-calculators.ts",
    "build:content-index": "tsx scripts/build-content-index.ts",
    "db:fts:refresh": "tsx scripts/refresh-fts.ts",
    "db:import:backup": "tsx scripts/import-from-backup.ts --source content-backup-20250913_161709/statcal.db",
    "migrate:howto": "tsx scripts/migrate-howto-content.ts",
    "migrate:howto:dry": "tsx scripts/migrate-howto-content.ts --dry-run --verbose",
    "migrate:howto:priority": "tsx scripts/migrate-howto-content.ts --priority",
    "postbuild": "mkdir -p .next/data && cp -f data/statcal.db .next/data/ 2>/dev/null || echo 'Database file not found, using fallback' && cp -f data/calculators.json .next/data/ 2>/dev/null || echo 'Calculators JSON not found'",
    "check-links": "tsx scripts/check-links.ts",
    "check-links:external": "tsx scripts/check-links-external.ts",
    "check-links:ci": "npm run check-links -- --fail-on-broken --report=link-report.md",
    "lighthouse": "tsx scripts/run-lighthouse.ts",
    "test:a11y": "playwright test tests/performance.spec.ts --grep 'Accessibility'",
    "test:perf": "playwright test tests/performance.spec.ts --grep 'Performance'"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.3",
    "@types/decimal.js": "^0.0.32",
    "@types/mdx": "^2.0.13",
    "decimal.js": "^10.6.0",
    "drizzle-orm": "^0.44.5",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.400.0",
    "next": "^15.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "zod": "^4.1.5",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "typescript": "^5.0.0",
    "tsx": "^4.20.5",
    "better-sqlite3": "^9.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-core": "^4.9.0",
    "chalk": "^5.6.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "glob": "^11.0.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  }
}
